---
import Layout from "~/layouts/PageLayout.astro";

import Hero from "~/components/widgets/Hero.astro";
import Content from "~/components/widgets/Content.astro";
const metadata = {
  title: "Aadit Kamat Personal Website",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto max-w-4xl">
    <img
      src="https://avatars.githubusercontent.com/u/30969577?s=400&u=9558fc3557d79c88a7080034fe8c22654aca2e4d&v=4"
      alt="GitHub profile picture"
      style={{
        borderRadius: "200%",
        margin: "0 auto",
        maxWidth: "200px",
      }}
    />
    <br />

    <Hero>
      <Fragment slot="title">
        Hello, <span class="text-accent dark:text-white highlight">World!</span>
        This is <span class="text-accent dark:text-white highlight">Aadit.</span>
      </Fragment>

      <Fragment slot="subtitle">
        <span class="hidden sm:inline">
          Welcome to my üè† on the internet.
        </span>
      </Fragment>
    </Hero>

    <Content isReversed title="My socials">
      <Fragment slot="content">
        <div class="flex space-x-36">
          <div>
            <iframe
              src="https://aadit.substack.com/embed"
              title="Aadit's Substack"
              width="480"
              height="425"
              style="border:1px solid #EEE; background:white; margin: '0 auto';"
            >
            </iframe>
          </div>
          <div>
            <a
              class="twitter-timeline"
              data-lang="en"
              data-width="480"
              data-height="425"
              href="https://twitter.com/aaditkamat?ref_src=twsrc%5Etfw"
              >Tweets by aaditkamat</a
            >
          </div>
        </div>
      </Fragment>
    </Content>
  </section>
</Layout>
