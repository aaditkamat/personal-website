---
import Layout from "~/layouts/PageLayout.astro";
import Hero from "~/components/widgets/Hero.astro";
import Content from "~/components/widgets/Content.astro";
import { TypeAnimation } from "react-type-animation";
const metadata = {
  title: "Aadit Kamat",
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <section class="px-6 sm:px-6 py-12 sm:py-16 lg:py-20 mx-auto">
    <Hero
      image={{
        src: "~/assets/images/Landing Page Photo.jpg",
        alt: "Aadit at Ben Hill Griffins",
      }}
    >
      <Fragment slot="title">
        <TypeAnimation client:load>
          Hello, <span class="text-accent dark:text-white highlight"
            >World!</span
          >
        </TypeAnimation>
        <TypeAnimation client:load>
          This is <span class="text-accent dark:text-white highlight"
            >Aadit.</span
          >
        </TypeAnimation>
      </Fragment>

      <Fragment slot="subtitle">
        <span class="hidden sm:inline text-4xl">
          Welcome to my üè† on the internet.
        </span>
      </Fragment>
    </Hero>

    <Content isReversed title="My socials">
      <Fragment slot="content">
        <div
          class="flex flex-col space-y-12 md:flex-row md:space-x-36 md:space-y-0 md:items-center"
        >
          <div>
            <iframe
              src="https://aadit.substack.com/embed"
              title="Aadit's Substack"
              width="480"
              height="425"
              style="border:1px solid #EEE; background:white; margin: '0 auto';"
            >
            </iframe>
          </div>
          <div>
            <a
              class="twitter-timeline"
              data-lang="en"
              data-width="480"
              data-height="425"
              href="https://twitter.com/aaditkamat?ref_src=twsrc%5Etfw"
              >Tweets by aaditkamat</a
            >
          </div>
        </div>
      </Fragment>
    </Content>
  </section>
</Layout>
