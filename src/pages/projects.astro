---
import { projectsData } from "~/data";
import Page from "~/components/common/Page.astro";
---

<Page title="Projects" headline="Projects I didn't break">
  <div class="flex md:flex-row flex-wrap">
    {
      projectsData.map((project) => {
        return (
          <>
            <div class="flex m-5 border-2 shadow-xl rounded-xl over:text-black md:h-64 md:w-full mb-8">
              <div class="md:p-6 md:m-4 p-2 h-1/3 w-2/3 text-left">
                <a href={project.link}>
                  <h1 class="font-bold text-xl text-purple-800 underline">
                    {project.title}
                  </h1>
                </a>
                <p>{project.info}</p>
              </div>
              <div class="w-[300px] h-[150px]">
                <img
                  src={project.imgSrc}
                  alt={project.title}
                  class="hidden md:block md:m-6 items-center"
                />
              </div>
            </div>
          </>
        );
      })
    }
  </div>
</Page>

